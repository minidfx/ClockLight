{
  "cmd": "bash",
  "name": "Build and deploy",
  "args": ["buildAndDeploy.sh"],
  "sh": true,
  "errorMatch": [
    "\\.\\.\\/(?<file>[\\/0-9a-zA-Z\\._]+):(?<line>\\d+):(?<col>\\d+): error:"
  ],
  "env": {
    "PROJECT_PATH": "<project path>",
    "PEBBLE_SDK_PATH": "<remote_sdk_path>",
    "PHONE_IP": "<phone_ip>",
    "USERNAME": "<ssh_username>",
    "SERVER_HOST": "<ssh_host>"
  },
  "targets": {
      "Build": {
        "cmd": "bash",
        "args": ["remote.sh", "build"],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      },
      "Deploy": {
        "cmd": "bash",
        "args": [ "deploy.sh" ],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      },
      "Clean": {
        "cmd": "bash",
        "args": [ "clean.sh" ],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      },
      "Push only": {
        "cmd": "bash",
        "args": [ "push.sh" ],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      }
    }
}
