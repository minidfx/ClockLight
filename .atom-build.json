{
  "cmd": "docker",
  "name": "Build (thru docker)",
  "args": ["run", "-v", "~/Git/ClockLight:/home/pebble/project", "minidfx/pebblerunner", "build"],
  "sh": true,
  "errorMatch": [
    "\\.\\.\\/(?<file>[\\/0-9a-zA-Z\\._]+):(?<line>\\d+):(?<col>\\d+): error:"
  ],
  "env": {
    "PROJECT_PATH": "<project path>",
    "PEBBLE_SDK_PATH": "<remote_sdk_path>",
    "PHONE_IP": "<phone_ip>",
    "USERNAME": "<ssh_username>",
    "SERVER_HOST": "<ssh_host>"
  },
  "targets": {
    "Deploy (thru docker)": {
      "cmd": "docker",
      "args": ["run", "-v", "~/Git/ClockLight:/home/pebble/project", "minidfx/pebblerunner", "install", "--phone", "192.168.1.112"]
    },
    "Clean (thru docker)": {
      "cmd": "docker",
      "args": ["run", "-v", "~/Git/ClockLight:/home/pebble/project", "minidfx/pebblerunner", "clean"]
    },
    "Build (thru server)": {
        "cmd": "bash",
        "args": ["remote.sh", "build"],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      },
      "Deploy (thru server)": {
        "cmd": "bash",
        "args": [ "deploy.sh" ],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      },
      "Clean (thru server)": {
        "cmd": "bash",
        "args": [ "clean.sh" ],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      },
      "Push only (thru server)": {
        "cmd": "bash",
        "args": [ "push.sh" ],
        "env": {
          "PROJECT_PATH": "<project path>",
          "PEBBLE_SDK_PATH": "<remote_sdk_path>",
          "PHONE_IP": "<phone_ip>",
          "USERNAME": "<ssh_username>",
          "SERVER_HOST": "<ssh_host>"
        }
      }
  }
}
