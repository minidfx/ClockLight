{
  "cmd": "bash",
  "name": "Build and deploy",
  "args": ["buildAndDeploy.sh"],
  "sh": true,
  "errorMatch": [
    "\\.\\.\\/(?<file>[\\/0-9a-zA-Z\\._]+):(?<line>\\d+):(?<col>\\d+): error:"
  ],
  "targets": {
      "Build": {
        "cmd": "bash",
        "args": ["remote.sh", "build"]
      },
      "Deploy": {
        "cmd": "bash",
        "args": [ "deploy.sh" ]
      },
      "Clean": {
        "cmd": "bash",
        "args": [ "clean.sh" ]
      }
    }
}
